@model UserHospitalVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}

<div class="row d-flex align-items-center justify-content-center" style="height:600px;">
    <div class="col-md-8 p-5 bg-light">
        <h4 class="text-center">Hastane Kayıt Sayfası</h4>
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-4">
                <input type="submit" value="Kayıt Ol" class="btn btn-primary" style="padding: 10px 50px" />
            </div>
        </form>
        <div class="text-center mt-5">
            <p>Zaten üye misin? <a asp-action="Login">Giriş yap</a></p>
        </div>
        <div class="mt-5">
            <a asp-controller="Home" asp-action="Index">Anasayfaya dön.</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
