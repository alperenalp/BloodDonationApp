@model ValidateUserLoginRequest

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-center" style="height:600px;">

    <div class="col-md-8 p-5 bg-light">
        <h4 class="text-center">Kullanıcı Giriş Sayfası</h4>

        <form asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-outline mb-4">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group form-outline mb-4">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-4">
                <input type="submit" value="Giriş yap" class="btn btn-primary" style="padding: 10px 50px" />
            </div>
        </form>
        <div class="text-center mt-5">
            <p>Üye değil misin? <a asp-action="Register">Bağışçı ol</a> - <a asp-controller="Hospitals" asp-action="Register">Hastane üyeliği oluştur</a></p>
        </div>
        <div class ="mt-5">
            <a asp-controller="Home" asp-action="Index">Anasayfaya dön.</a>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
